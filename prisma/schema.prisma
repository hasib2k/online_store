// Switched to PostgreSQL for production deployments.
// Update your DATABASE_URL in the server `.env` before running migrations.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id           String   @id @default(uuid())
  productName  String
  price        Int
  quantity     Int
  shipping     Int
  total        Int
  area         String
  customerName String
  phone        String
  address      String
  status       String   @default("pending")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
