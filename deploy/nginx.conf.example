# Nginx reverse proxy example for Hostinger VPS
# Place this in /etc/nginx/sites-available/online_store and symlink to sites-enabled
server {
  listen 80;
  server_name example.com www.example.com;

  # Serve Next.js static assets
  location /_next/static/ {
    proxy_pass http://127.0.0.1:3000;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location / {
    proxy_pass http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_cache_bypass $http_upgrade;
  }

  # Optionally serve files from public directly
  # location /public/ {
  #   alias /var/www/online_store/public/;
  # }
}
